// ============ MODELS ============

model Person {
  id                   String            @id @default(cuid())
  slug                 String            @unique

  // ═══════════════════════════════════════════
  // CORE IDENTIFICATION
  // ═══════════════════════════════════════════
  name                 String
  fullName             String?          // Full legal name
  firstName            String?
  middleName           String?
  lastName             String?
  namePrefix           String?          // Dr., Prof., Rabbi, etc.
  nameSuffix           String?          // Jr., III, PhD, etc.

  // Alternative names
  aliases              String[]         // Other names used (enhanced from akaNames)
  hebrewName           String?
  arabicName           String?
  nativeName           String?          // Name in native script
  akaNames             String[]         // Legacy field - array of alternative names

  // ═══════════════════════════════════════════
  // DEMOGRAPHICS
  // ═══════════════════════════════════════════
  birthDate            DateTime?        // Legacy field
  dateOfBirth          DateTime?        // v3.0.1 - same as birthDate for clarity
  age                  Int?             // Calculated or estimated
  gender               Gender?

  // Legacy nationality fields
  nationality          NationalityType   @default(OTHER)  // Legacy field
  nationalityDetail    String?          // Legacy free text for specific country

  // v3.0.1 nationality fields
  nationalityArray     Nationality[]    // Can have multiple nationalities
  primaryNationality   Nationality?
  ethnicity            String[]

  // ═══════════════════════════════════════════
  // PROFESSIONAL INFO
  // ═══════════════════════════════════════════
  // Legacy profession fields
  profession           ProfessionType    @default(OTHER)  // Legacy field
  professionDetail     String?          // Legacy free text for specific role

  // v3.0.1 profession fields
  professionArray      Profession[]     // Can have multiple professions
  primaryProfession    Profession?
  professionDetails    String?          // Specific role details

  industry             Industry?
  specialization       String?          // Area of expertise
  yearsExperience      Int?
  yearsActive          String?          // Legacy field

  // Academic
  educationLevel       EducationLevel?
  degrees              String[]         // ["PhD", "MBA", "JD"]
  universities         String[]         // Schools attended
  academicTitles       String[]         // "Professor Emeritus"

  // ═══════════════════════════════════════════
  // CURRENT POSITION
  // ═══════════════════════════════════════════
  currentTitle         String?
  currentOrganization  String?          // Quick reference
  currentOrgId         String?

  // Employment status
  employmentStatus     EmploymentStatus?
  isRetired            Boolean          @default(false)
  retirementDate       DateTime?

  // ═══════════════════════════════════════════
  // PUBLIC PROFILE
  // ═══════════════════════════════════════════
  bio                  String?          @db.Text  // Legacy field, enhanced
  shortBio             String?          @db.VarChar(500)
  imageUrl             String?          // Legacy field

  publicFigure         Boolean          @default(false)
  celebrityStatus      CelebrityStatus?

  notableFor           String[]         // Key achievements/positions
  awards               String[]         // Awards received
  publications         String[]         // Books/papers authored
  bestKnownFor         String?          // Legacy field

  // ═══════════════════════════════════════════
  // INFLUENCE & REACH
  // ═══════════════════════════════════════════
  influenceScore       Float?           // 0-100 calculated
  influenceLevel       PersonInfluenceLevel?

  // Social Media
  hasTwitter           Boolean          @default(false)
